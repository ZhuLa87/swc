<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsFragment"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/white"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/notifications" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_cancel"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animationView_notifications"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cancel" />

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Swc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <!-- Customize theme -->
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorError">@color/colorError</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!-- Custom Animation -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>

    <!-- Settings Switch -->
    <!-- Night mode Switch -->
    <style name="nightModeSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99E5E9EC</item>
    </style>

    <!-- Notification Switch -->
    <style name="notificationSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99E5E9EC</item>
    </style>

    <style name="Theme.Swc" parent="Base.Theme.Swc" />
</resources>
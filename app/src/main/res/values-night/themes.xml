<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Swc" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Surface brand color. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!-- Customize theme -->
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorError">@color/error</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!-- Custom Animation -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>

    <!-- Settings Switch -->
        <!-- Night mode Switch -->
        <style name="nightModeSwitch" parent="Theme.AppCompat.DayNight">
            <item name="colorControlActivated">@color/night_mode</item>
            <item name="colorSwitchThumbNormal">@color/white</item>
            <item name="android:colorForeground">#99E5E9EC</item>
        </style>

        <!-- Notification Switch -->
        <style name="notificationSwitch" parent="Theme.AppCompat.DayNight">
            <item name="colorControlActivated">@color/notification</item>
            <item name="colorSwitchThumbNormal">@color/white</item>
            <item name="android:colorForeground">#99E5E9EC</item>
        </style>

    <style name="Theme.Swc" parent="Base.Theme.Swc" />
</resources>